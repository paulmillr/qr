{
  "name": "qr",
  "version": "0.4.2",
  "description": "Minimal 0-dep QR code generator & reader. Supports ascii, term, gif and svg formats",
  "files": [
    "esm",
    "index.js",
    "index.d.ts",
    "index.d.ts.map",
    "index.ts",
    "decode.js",
    "decode.d.ts",
    "decode.d.ts.map",
    "decode.ts",
    "dom.js",
    "dom.d.ts",
    "dom.d.ts.map",
    "dom.ts",
    "LICENSE",
    "LICENSE-MIT"
  ],
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "devDependencies": {
    "@paulmillr/jsbt": "0.3.3",
    "micro-bmark": "0.4.1",
    "micro-should": "0.5.2",
    "prettier": "3.5.3",
    "typescript": "5.8.3"
  },
  "author": "Paul Miller (https://paulmillr.com)",
  "license": "(MIT OR Apache-2.0)",
  "homepage": "https://github.com/paulmillr/qr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulmillr/qr.git"
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "build:release": "npx jsbt esbuild test/build",
    "lint": "prettier --check src",
    "format": "prettier --write src",
    "test": "cd test; npm ci; node index.js",
    "test:bun": "cd test; bun install; bun index.js",
    "test:deno": "cd test; npm install; deno --allow-env --allow-read index.js"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js"
    },
    "./decode.js": {
      "import": "./esm/decode.js",
      "require": "./decode.js"
    },
    "./dom.js": {
      "import": "./esm/dom.js",
      "require": "./dom.js"
    }
  },
  "keywords": [
    "qr",
    "code",
    "qr code",
    "qr pattern",
    "qr generator",
    "qr reader",
    "ascii",
    "gif",
    "svg",
    "camera",
    "file"
  ],
  "funding": "https://paulmillr.com/funding/"
}
